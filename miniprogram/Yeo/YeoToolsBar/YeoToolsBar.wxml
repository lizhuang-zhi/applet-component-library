<view class="yeo-tools-bar">
  <view class="inner-tools" style="border-radius: {{bordRadius + 'rpx'}};">

    <!-- 开始点击 -->
    <view class="main size" bindtap="showTools">
      <image src="{{mainPic}}"></image>
    </view>

    <view class="item-1 item size" animation="{{fir_animation}}">
      <image src="{{upPic}}"></image>
    </view>
    <view class="item-2 item size" animation="{{sec_animation}}">
      <image src="{{rightUpPic}}"></image>
    </view>
    <view class="item-3 item size" animation="{{thi_animation}}">
      <image src="{{rightPic}}"></image>
    </view>

  </view>
</view>